---
import Header from "../components/Header.astro";
import { ViewTransitions } from "astro:transitions";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="min-h-screen pb-32">
    <Header />
    <main class="max-w-5xl px-4 m-auto related">
      <slot />
    </main>
    <style is:global>
      :root {
        --accent: 136, 58, 234;
        --accent-light: 224, 204, 250;
        --accent-dark: 49, 10, 101;
        --accent-gradient: linear-gradient(
          45deg,
          rgb(var(--accent)),
          rgb(var(--accent-light)) 30%,
          white 60%
        );
      }

      html {
        background-color: #1d1e29; /* Color de fondo blanco */
        background-image:
          radial-gradient(
            circle at top,
            rgba(0, 0, 0, 0.2) 0%,
            transparent 100%
          ),
          /* Difuminado superior */
            radial-gradient(
              ellipse at bottom,
              rgba(0, 0, 0, 0.2) 0%,
              transparent 100%
            ),
          /* Difuminado inferior */
            linear-gradient(90deg, rgba(0, 0, 0, 0.2) 1px, transparent 1px),
          /* Líneas verticales */
            linear-gradient(rgba(0, 0, 0, 0.2) 1px, transparent 1px); /* Líneas horizontales */
        background-size:
          100% 300px,
          100% 300px,
          20px 20px,
          20px 20px; /* Tamaño del difuminado y las celdas */
        background-position:
          top,
          bottom,
          0 0,
          0 0; /* Posición de difuminado y cuadrícula */
        background-repeat: no-repeat, no-repeat, repeat, repeat; /* Repetición de gradientes solo en las líneas */
        font-family: system-ui, sans-serif;
        color: #fff;
      }
      code {
        font-family:
          Menlo,
          Monaco,
          Lucida Console,
          Liberation Mono,
          DejaVu Sans Mono,
          Bitstream Vera Sans Mono,
          Courier New,
          monospace;
      }
    </style>
  </body>
</html>
