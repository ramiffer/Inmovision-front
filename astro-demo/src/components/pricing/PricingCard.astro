<style is:inline>
  body {
    background-color: #0d0f14;
    background-image: linear-gradient(
        90deg,
        rgba(0, 0, 0, 0.2) 1px,
        transparent 1px
      ),
      linear-gradient(rgba(0, 0, 0, 0.2) 1px, transparent 1px);
    background-size:
      20px 20px,
      20px 20px;
    background-repeat: repeat, repeat;
    margin: 0;
    color: #fff;
  }

  .pricing-container {
    .pricing-table {
      position: relative;
      margin-bottom: 15px;

      .tb-border {
        &:before {
          content: "";
          display: block;
          height: 5px;
          top: 0;
          left: 0;
          right: 100%;
          background: #1f2937;
          position: absolute;
          z-index: 1;
          transition: right 0.2s linear 0.6s;
        }

        &:after {
          content: "";
          display: block;
          height: 5px;
          bottom: 0;
          left: 100%;
          right: 0;
          background: #1f2937;
          position: absolute;
          z-index: 1;
          transition: left 0.2s linear 0.2s;
        }
      }

      .lr-border {
        &:before {
          content: "";
          display: block;
          width: 5px;
          top: 100%;
          left: 0;
          bottom: 0;
          background: #1f2937;
          position: absolute;
          z-index: 1;
          transition: top 0.2s linear;
        }

        &:after {
          content: "";
          display: block;
          width: 5px;
          top: 0;
          right: 0;
          bottom: 100%;
          background: #1f2937;
          position: absolute;
          z-index: 1;
          transition: bottom 0.2s linear 0.4s;
        }
      }

      &:hover {
        .pricing-inner {
          background: #425570;
          color: #000;
        }

        .plan-price {
          color: #2ecc71;
        }

        .tb-border {
          &:before {
            right: 0;
            transition: right 0.2s linear;
          }

          &:after {
            left: 0;
            transition: left 0.2s linear 0.4s;
          }
        }

        .lr-border {
          &:before {
            top: 0;
            transition: top 0.2s linear 0.6s;
          }
          &:after {
            bottom: 0;
            transition: bottom 0.2s linear 0.2s;
          }
        }

        .btn {
          -webkit-transform: translate3d(0, 0, 0);
          transform: translate3d(0, 0, 0);
        }
      }
    }

    .pricing-inner {
      background: #425570;
      text-align: center;
      color: #fff;
      -webkit-transition:
        #1f2937 0.4s ease-in,
        color 0.4s ease-in;

      .plan-name {
        padding: 50px 100px;
        position: relative;
      }

      .plan-price-container {
        overflow: hidden;
      }

      .plan-price {
        font-size: 46px;
        color: #000;
        margin: 0;
        font-weight: 800;
        -webkit-transition: color 0.1s ease-out;
        transition: color 0.1s ease-out;
        -webkit-animation: hue-rotate 10s linear infinite;
        animation: hue-rotate 10s linear infinite;
      }

      .plan-desc {
        font-size: 12px;
        margin-bottom: 15px;
        padding: 0 30px 50px;
      }

      .btn {
        font-size: 13px;
        border-radius: 0;
        border: none;
        padding: 15px 15px;
        margin: 0 15px 25px;
        background: #1f2937;
        color: white;
        -webkit-transform: translate3d(0, -5px, 0);
        transform: translate3d(0, -5px, 0);
        -webkit-transition:
          opacity 0.3s,
          transform 0.3s;
        transition:
          opacity 0.3s,
          transform 0.3s;
      }
    }
  }

  @keyframes hue-rotate {
    from {
      -webkit-filter: hue-rotate(0);
      -moz-filter: hue-rotate(0);
      -ms-filter: hue-rotate(0);
      filter: hue-rotate(0);
    }
    to {
      -webkit-filter: hue-rotate(360deg);
      -moz-filter: hue-rotate(360deg);
      -ms-filter: hue-rotate(360deg);
      filter: hue-rotate(360deg);
    }
  }
  @keyframes moveUp {
    50% {
      -webkit-transform: translate3d(0, -100%, 0);
      transform: translate3d(0, -100%, 0);
    }
    51% {
      opacity: 0;
      -webkit-transform: translate3d(0, -100%, 0);
      transform: translate3d(0, -100%, 0);
    }
    52% {
      opacity: 1;
      -webkit-transform: translate3d(0, 100%, 0);
      transform: translate3d(0, 100%, 0);
    }
    100% {
      -webkit-transform: translate3d(0, 0, 0);
      transform: translate3d(0, 0, 0);
    }
  }
</style>
