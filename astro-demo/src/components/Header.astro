---
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
import HeaderLink from "./HeaderLink.astro";
import HeaderButton from "./HeaderButton.astro";

const menuitems = [
  {
    title: "Services",
  },
  {
    title: "What we do",
  },
  {
    title: "Who we are",
  },
  {
    title: "Contact",
  },
];
---

<header
  class="flex flex-col lg:flex-row justify-between items-center mb-5 py-2"
>
  <Astronav>
    <div class="flex w-full lg:w-auto items-center justify-between pl-10">
      <a href="/">
        <img src="../../public/logo.png" class="w-16" alt="Logo" />
      </a>
      <div class="block lg:hidden pr-10">
        <MenuIcon class="text-lg text-white" />
      </div>
    </div>
    <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
      <ul class="flex flex-col items-center lg:flex-row lg:gap-3 ease-out duration-900">
        {
          menuitems.map((item) => (
            <>
              {item && (
                <li>
                  <HeaderLink href="/">{item.title}</HeaderLink>
                </li>
              )}
            </>
          ))
        }
      </ul>
      <div class="lg:hidden flex items-center justify-center mt-3 gap-6">
        <HeaderButton href="#">Log in</HeaderButton>
        <HeaderButton href="#">Sign up</HeaderButton>
      </div>
    </MenuItems>
  </Astronav>
  <div>
    <div class="hidden lg:flex items-center gap-4 pr-10">
      <HeaderButton href="#">Log in</HeaderButton>
      <HeaderButton href="#">Sign up</HeaderButton>
    </div>
  </div>
</header>

<style is:inline>

header {
  background-color: #1d1e29;
}

</style>