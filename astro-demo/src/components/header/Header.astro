---
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
import HeaderLink from "../header/HeaderLink.astro";
import UserIcon from "../header/UserIcon.astro";
import CartButton from "../header/CartButton.astro";
import { api } from "../../services/apiroute";
import CartDrawer from "../cart/CartDrawer.astro";

const userItems = [
	{
		title: "Pricing",
		href: "/pricing/plans",
	},
	{
		title: "What we do",
		href: "#whatwedo",
	},
	{
		title: "Who we are",
		href: "#whoweare",
	},
	{
		title: "Catalog",
		href: "#catalog",
	},
];
const supplierItems = [
	{
		title: "Pricing",
		href: "/pricing/plans",
	},
	{
		title: "What we do",
		href: "#whatwedo",
	},
	{
		title: "Who we are",
		href: "#whoweare",
	},
	{
		title: "Catalog",
		href: "#catalog",
	},
	{
		title: "Add product",
		href: "/new/products",
	},
];

const jwt = Astro.cookies.get("jwt");
console.log(jwt?.value);

let userData;
if (Astro.request.method === "GET") {
	try {
		const response = await fetch(`${api}auth/me`, {
			method: "GET",
			headers: {
				"Content-Type": "application/json",
				Authorization: `Bearer ${jwt?.value}`,
			},
		});

		if (response.ok) {
			userData = await response.json();
		} else {
			console.log("Error al obtener los datos del usuario");
		}
	} catch (error) {
		if (error instanceof Error) {
			console.log(error.message);
		}
	}
}

let supplierData = userData?.supplier;
console.log(supplierData);
---

<header
	class="flex flex-col lg:flex-row justify-between items-center mb-5 py-2 px-8 border-b border-[#343841]"
>
	<Astronav>
		<div class="flex w-full lg:w-auto items-center justify-between">
			<a href="/">
				<img src="https://iili.io/J9vk1bS.png" class="w-10" alt="logo" />
			</a>
			<div class="block lg:hidden">
				<MenuIcon class="text-lg text-white" />
			</div>
		</div>
		<MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
			<ul class="flex flex-col items-center lg:flex-row lg:gap-3 ease-out duration-900">
				{
					() => {
						if (supplierData == null) {
							return userItems.map((item) => (
								<>
									{item && (
										<li>
											<HeaderLink isBorder={false} href={`${item.href}`}>
												{item.title}
											</HeaderLink>
										</li>
									)}
								</>
							));
						} else {
							return supplierItems.map((item) => (
								<>
									{item && (
										<li>
											<HeaderLink isBorder={false} href={`${item.href}`}>
												{item.title}
											</HeaderLink>
										</li>
									)}
								</>
							));
						}
					}
				}
			</ul>
			<div class="lg:hidden flex items-center justify-center mt-3 gap-6">
				{
					() => {
						if (!!Astro.cookies.get("jwt") == false) {
							return (
								<>
									<HeaderLink isBorder={true} href="/auth/login">
										Log in
									</HeaderLink>
									<HeaderLink isBorder={true} href="/auth/signup">
										Sign up
									</HeaderLink>
								</>
							);
						} else {
							return (
								<>
									<UserIcon href="/profile/information">
										<svg
											xmlns="http://www.w3.org/2000/svg"
											class="icon icon-tabler icon-tabler-user"
											width="34"
											height="34"
											viewBox="0 0 24 24"
											stroke-width="2"
											stroke="currentColor"
											fill="none"
											stroke-linecap="round"
											stroke-linejoin="round"
										>
											<path stroke="none" d="M0 0h24v24H0z" fill="none" />
											<path d="M8 7a4 4 0 1 0 8 0a4 4 0 0 0 -8 0" />
											<path d="M6 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2" />
										</svg>
									</UserIcon>
									<CartButton id="mobileCart">
										<svg
											xmlns="http://www.w3.org/2000/svg"
											class="icon icon-tabler icon-tabler-shopping-cart"
											width="34"
											height="34"
											viewBox="0 0 24 24"
											stroke-width="2"
											stroke="currentColor"
											fill="none"
											stroke-linecap="round"
											stroke-linejoin="round"
										>
											<path stroke="none" d="M0 0h24v24H0z" fill="none" />
											<path d="M6 19m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0" />
											<path d="M17 19m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0" />
											<path d="M17 17h-11v-14h-2" />
											<path d="M6 5l14 1l-1 7h-13" />
										</svg>
									</CartButton>
								</>
							);
						}
					}
				}
			</div>
		</MenuItems>
	</Astronav>

	<div class="hidden lg:flex items-center justify-between">
		{
			() => {
				if (!!Astro.cookies.get("jwt") == false) {
					return (
						<>
							<HeaderLink isBorder={true} href="/auth/login">
								Log in
							</HeaderLink>
							<HeaderLink isBorder={true} href="/auth/signup">
								Sign up
							</HeaderLink>
						</>
					);
				} else {
					return (
						<>
							<UserIcon href="/profile/information">
								<svg
									xmlns="http://www.w3.org/2000/svg"
									class="icon icon-tabler icon-tabler-user"
									width="32"
									height="32"
									viewBox="0 0 24 24"
									stroke-width="2"
									stroke="currentColor"
									fill="none"
									stroke-linecap="round"
									stroke-linejoin="round"
								>
									<path stroke="none" d="M0 0h24v24H0z" fill="none" />
									<path d="M8 7a4 4 0 1 0 8 0a4 4 0 0 0 -8 0" />
									<path d="M6 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2" />
								</svg>
							</UserIcon>
							<CartButton id="cart">
								<svg
									xmlns="http://www.w3.org/2000/svg"
									class="icon icon-tabler icon-tabler-shopping-cart"
									width="32"
									height="32"
									viewBox="0 0 24 24"
									stroke-width="2"
									stroke="currentColor"
									fill="none"
									stroke-linecap="round"
									stroke-linejoin="round"
								>
									<path stroke="none" d="M0 0h24v24H0z" fill="none" />
									<path d="M6 19m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0" />
									<path d="M17 19m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0" />
									<path d="M17 17h-11v-14h-2" />
									<path d="M6 5l14 1l-1 7h-13" />
								</svg>
							</CartButton>
						</>
					);
				}
			}
		}
	</div>

	<CartDrawer />
</header>

<style is:inline>
	header {
		background-color: #0d0f14;
	}
</style>
