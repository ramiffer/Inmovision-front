---
interface Props {
	href: string;
}

const { href } = Astro.props;
---

<a
	href={href}
	class=`flex-row justify-center text-white cursor-pointer font-medium text-center inline-flex items-center dark:focus:ring-[#1da1f2]/55 p-4 transition-all duration-200 ease-in-out hover:scale-110 scale-90`
>
	<slot />
</a>
